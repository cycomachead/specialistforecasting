<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

  <appender name="console" class="org.apache.log4j.ConsoleAppender"> 
    <param name="Target" value="System.out"/> 
    <param name="Threshold" value="debug"/>
    <layout class="org.apache.log4j.PatternLayout"> 
        <!--param name="ConversionPattern" value="[%d] %x%-5.5p - %M(%C{1}:%L) %m%n"/-->    
        <!--param name="ConversionPattern" value="[%d{HH:mm:ss,SSS}] %x%-5.5p - %M(%C{1}:%L) %m%n"/-->    
        <!--param name="ConversionPattern" value="%x%-5.5p - %M(%C{1}:%L) %m%n"/-->    
        <!--param name="ConversionPattern" value="[%x%-5.5p] %M(%C{1}:%L) %m%n"/-->    
        <!--param name="ConversionPattern" value="[%x%p]:%t %C{1}.%M:%L - %m%n"/-->
        <!--param name="ConversionPattern" value="[%x%p] %m%n"/-->
        <param name="ConversionPattern" value="[%x%p] (%C{1}:%L) %m%n"/>
    </layout> 
  </appender> 
  
  <category name="org.springframework">
      <priority value="warn"/>
  </category>

  <category name="com.sforce.soap">
      <priority value="warn"/>
  </category>

  <category name="com.salesforce.automation">
                  <priority value="debug"/>
  </category>
   
  <root> 
      <priority value ="warn"/> 
      <appender-ref ref="console"/>
  </root>
  
</log4j:configuration>
